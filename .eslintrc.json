{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "electron": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn"],
    "no-debugger": ["warn"],
    "no-trailing-spaces": ["error"],
    "eol-last": ["error"],
    "comma-dangle": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "space-before-function-paren": ["error", "never"],
    "keyword-spacing": ["error"],
    "space-infix-ops": ["error"],
    "no-multiple-empty-lines": ["error", { "max": 2 }],
    "no-var": ["error"],
    "prefer-const": ["error"],
    "arrow-spacing": ["error"],
    "prefer-arrow-callback": ["error"],
    "no-duplicate-imports": ["error"]
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "console": "readonly",
    "process": "readonly",
    "__dirname": "readonly",
    "__filename": "readonly",
    "Buffer": "readonly",
    "global": "readonly",
    "require": "readonly",
    "module": "readonly",
    "exports": "readonly"
  }
}

